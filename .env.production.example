# 生產環境配置範例
# 複製此檔案為 .env.production 並填入實際值

# 應用程式設定
APP_ENV=production
API_URL=https://yourdomain.com/api/v1

# 資料庫設定 (使用強密碼)
DB_USER=fastenmind_prod
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE
DB_NAME=fastenmind_production

# Redis 設定
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE

# JWT 設定 (使用 openssl rand -base64 32 生成)
JWT_SECRET_KEY=YOUR_JWT_SECRET_KEY_HERE

# 管理介面密碼
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=YOUR_PGADMIN_PASSWORD_HERE

# N8N 設定
N8N_USER=admin
N8N_PASSWORD=YOUR_N8N_PASSWORD_HERE

# SSL 憑證路徑 (如果使用自簽憑證)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 備份設定
BACKUP_RETENTION_DAYS=7

# 監控設定
ENABLE_MONITORING=true